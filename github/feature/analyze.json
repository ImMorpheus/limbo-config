[
  {
    "targets": [
      {"user": "SpongePowered", "repo": "SpongeAPI"},
      {"user": "SpongePowered", "repo": "SpongeCommon"},
      {"user": "SpongePowered", "repo": "SpongeForge"},
      {"user": "SpongePowered", "repo": "SpongeVanilla"}
    ],
    "actions": [
      {
        "on": [
          "pull request comment",
          "pull request open"
        ],
        "who": "author",
        "type": "apply when found",
        "pattern": "~wip",
        "apply": {
          "label": {
            "add": "status: wip",
            "remove": [
              "status: needs review",
              "status: needs testing",
              "status: ready to merge"
            ]
          }
        }
      },
      {
        "on": [
          "pull request comment",
          "pull request open"
        ],
        "who": "author",
        "type": "apply when found",
        "pattern": "~qa",
        "apply": {
          "label": {
            "add": [
              "status: needs review",
              "status: needs testing"
            ],
            "remove": [
              "status: ready to merge",
              "status: wip"
            ]
          }
        }
      },
      {
        "on": "pull request comment",
        "who": "collaborator",
        "type": "apply when found",
        "pattern": "~tested",
        "apply": {
          "label": {
            "remove": [
              "status: needs testing",
              "status: wip"
            ]
          }
        }
      },
      {
        "on": "pull request comment",
        "who": "collaborator",
        "type": "apply when found",
        "pattern": "~reviewed",
        "apply": {
          "label": {
            "remove": [
              "status: needs review",
              "status: wip"
            ]
          }
        }
      },
      {
        "on": "pull request comment",
        "who": "collaborator",
        "type": "apply when found",
        "pattern": "~ready",
        "apply": {
          "label": {
            "add": "status: ready to merge",
            "remove": [
              "status: needs testing",
              "status: needs review",
              "status: wip"
            ]
          }
        }
      }
    ]
  }
]