<?xml version="1.0" encoding="utf-8"?>
<feature pattern="~move to ([a-z0-9-_]*)">
  <actions>
    <source close="true" lock="false">
      <comment content="issue_move_source.md"/>
      <labels>
        <add>
          <label>resolution: moved</label>
        </add>
      </labels>
    </source>
    <target close="false" lock="false">
      <comment content="issue_move_target.md"/>
    </target>
  </actions>

  <definitions>
    <definition id="api">
      <target user="SpongePowered" repo="SpongeAPI"/>
      <tags>
        <tag>api</tag>
        <tag>sa</tag>
      </tags>
    </definition>

    <definition id="common">
      <target user="SpongePowered" repo="SpongeCommon"/>
      <tags>
        <tag>common</tag>
        <tag>sc</tag>
      </tags>
    </definition>

    <definition id="forge">
      <target user="SpongePowered" repo="SpongeForge"/>
      <tags>
        <tag>forge</tag>
        <tag>sf</tag>
      </tags>
    </definition>

    <definition id="vanilla">
      <target user="SpongePowered" repo="SpongeVanilla"/>
      <tags>
        <tag>vanilla</tag>
        <tag>sv</tag>
      </tags>
    </definition>
  </definitions>

  <targets>
    <source id="api">
      <target>common</target>
      <target>forge</target>
      <target>vanilla</target>
    </source>

    <source id="common">
      <target>api</target>
      <target>forge</target>
      <target>vanilla</target>
    </source>

    <source id="forge">
      <target>api</target>
      <target>common</target>
      <target>vanilla</target>
    </source>

    <source id="vanilla">
      <target>api</target>
      <target>common</target>
      <target>forge</target>
    </source>
  </targets>
</feature>